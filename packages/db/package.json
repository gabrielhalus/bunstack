{
  "name": "@bunstack/db",
  "type": "module",
  "version": "0.0.0",
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc -b",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "drizzle:generate": "drizzle-kit generate --config=drizzle.config.cjs",
    "drizzle:push": "drizzle-kit push --config=drizzle.config.cjs",
    "drizzle:studio": "drizzle-kit studio --config=drizzle.config.cjs"
  },
  "dependencies": {
    "@bunstack/env": "workspace:*",
    "@bunstack/shared": "workspace:*",
    "drizzle-orm": "^0.44.2",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@bunstack/eslint-config": "workspace:*",
    "@bunstack/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.28.0",
    "eslint-plugin-drizzle": "^0.2.3"
  }
}
