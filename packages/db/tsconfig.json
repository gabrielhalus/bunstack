{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["bun", "node"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "references": [
    { "path": "../env" },
    { "path": "../shared" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
