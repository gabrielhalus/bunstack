{
  "extends": "@bunstack/typescript-config/react.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "paths": {
      "@bunstack/react/*": ["./src/*"],

      "@bunstack/api/*": ["../shared/src/*"],
      "@bunstack/env/*": ["../shared/src/*"],
      "@bunstack/shared/*": ["../shared/src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "references": [
    { "path": "../../apps/api" },
    { "path": "../env" },
    { "path": "../shared" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
