{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "rootDir": "src",
    "paths": {
      "@bunstack/api/*": ["../../apps/api/src/*"],
      "@bunstack/env/*": ["../../apps/env/src/*"],
      "@bunstack/shared/*": ["./*"]
    },
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["src/database/migrations/*", "src/database/seeds/*"]
}
