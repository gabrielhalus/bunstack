{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@bunstack/api/*": ["../../apps/api/src/*"],
      "@bunstack/shared/*": ["./*"]
    },
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["src/db/migrations/*", "src/db/seeds/*"]
}
