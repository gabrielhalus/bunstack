{
  "name": "@bunstack/shared",
  "type": "module",
  "version": "0.0.0",
  "exports": {
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    },
    "./constants/*": {
      "types": "./dist/constants/*.d.ts",
      "import": "./dist/constants/*.js"
    },
    "./contracts/*": {
      "types": "./dist/contracts/*/index.d.ts",
      "import": "./dist/contracts/*/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./schemas/*": {
      "types": "./dist/schemas/*.d.ts",
      "import": "./dist/schemas/*.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc -b",
    "lint": "eslint .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.7.1",
    "nanoid": "^5.1.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@bunstack/eslint-config": "workspace:*",
    "@bunstack/typescript-config": "workspace:*",
    "eslint": "^9.28.0"
  }
}
