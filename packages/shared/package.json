{
  "name": "@bunstack/shared",
  "type": "module",
  "version": "0.0.0",
  "exports": {
    "./access": {
      "types": "./dist/access/index.d.ts",
      "import": "./dist/access/index.js"
    },
    "./access/*": {
      "types": "./dist/access/*.d.ts",
      "import": "./dist/access/*.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    },
    "./constants/*": {
      "types": "./dist/constants/*.d.ts",
      "import": "./dist/constants/*.js"
    },
    "./contracts/*": {
      "types": "./dist/contracts/*/index.d.ts",
      "import": "./dist/contracts/*/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    },
    "./db/queries/*": {
      "types": "./dist/db/queries/*.d.ts",
      "import": "./dist/db/queries/*.js"
    },
    "./db/schemas/*": {
      "types": "./dist/db/schemas/*.d.ts",
      "import": "./dist/db/schemas/*.js"
    },
    "./db/types/*": {
      "types": "./dist/db/types/*.d.ts",
      "import": "./dist/db/types/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@bunstack/eslint-config": "workspace:*",
    "@bunstack/typescript-config": "workspace:*",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.9.8",
    "nanoid": "^5.1.5",
    "zod": "^3.25.55"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.28.0",
    "eslint-plugin-drizzle": "^0.2.3"
  }
}
