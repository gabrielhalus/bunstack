{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "types": [],
    "baseUrl": "../..",
    "paths": {
      "@bunstack/api/*": ["apps/api/src/*"],
      "@bunstack/web/*": ["apps/web/src/*"],
      "@bunstack/env": ["packages/env/src/index.ts"],
      "@bunstack/shared/*": ["packages/shared/src/*"],
      "@bunstack/react/*": ["packages/react/src/*"],
      "@bunstack/eslint-config": ["packages/eslint-config/*"],
      "@bunstack/typescript-config": ["packages/typescript-config/*"]
    }
  }
}
