{
  "extends": "@bunstack/typescript-config/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],

      "@bunstack/api/*": ["../api/src/*"],
      "@bunstack/i18n/*": ["../../packages/i18n/src/*"],
      "@bunstack/env": ["../../packages/env/src/index.ts"],
      "@bunstack/shared/*": ["../../packages/shared/src/*"],
      "@bunstack/react/*": ["../../packages/react/src/*"]
    },
    "outDir": "dist"
  },
  "references": [
    { "path": "../api" },
    { "path": "../../packages/env" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/react" }
  ],
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
