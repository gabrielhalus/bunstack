{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": "src",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./*"],
      "@bunstack/api/*": ["../../api/src/*"],
      "@bunstack/shared/*": ["../../../packages/shared/src/*"],
      "@bunstack/ui/*": ["../../../packages/ui/src/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../api/tsconfig.json"
    }
  ],
  "include": ["src"]
}
