{
  "extends": "@spawnd/typescript-config/base.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": "src",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./*"],
      "@spawnd/shared/schemas/*": ["../../../packages/shared/src/schemas/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
