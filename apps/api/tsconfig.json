{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@bunstack/api/*": ["./src/*"],

      "@bunstack/env": ["../../packages/env/src/index.ts"],
      "@bunstack/shared/*": ["../../packages/shared/src/*"]
    },
    "types": ["bun", "node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "references": [
    { "path": "../../packages/env" },
    { "path": "../../packages/shared" }
  ],
  "include": ["src"]
}
