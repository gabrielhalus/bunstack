{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./src",
    "paths": {
      "@bunstack/api/*": ["./*"],
      "@bunstack/env/*": ["../../packages/env/src/*"],
      "@bunstack/shared/*": ["../../packages/shared/src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src"]
}
