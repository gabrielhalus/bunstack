    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@bunstack/eslint-config": "workspace:*",
    "@bunstack/shared": "workspace:*",
    "@bunstack/typescript-config": "workspace:*",
    "@hono/zod-validator": "^0.7.0",
    "@libsql/client": "^0.15.8",
    "dotenv": "^16.5.0",
    "hono": "^4.7.11",
    "zod": "^3.25.55"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.28.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
