{
  "name": "@bunstack/api",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": "./src/app.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "nohup bunx drizzle-kit studio > /dev/null 2>&1 & bun run --watch src/index.ts",
    "lint": "eslint .",
    "test": "vitest",
