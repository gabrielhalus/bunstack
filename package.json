{
  "name": "bunstack",
  "private": true,
  "scripts": {
    "build": "turbo run build --",
    "dev": "turbo run dev --",
    "lint": "turbo run lint --",
    "test": "turbo run test --",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",

    "drizzle:generate": "turbo run drizzle:generate --filter=@bunstack/api",
    "drizzle:push": "turbo run drizzle:push --filter=@bunstack/api",
    "drizzle:studio": "turbo run drizzle:studio --filter=@bunstack/api"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.13",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
