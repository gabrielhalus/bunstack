{
  "name": "bunstack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "drizzle:generate": "turbo run drizzle:generate --filter=@bunstack/shared",
    "drizzle:push": "turbo run drizzle:push --filter=@bunstack/shared",
    "drizzle:studio": "turbo run drizzle:studio --filter=@bunstack/shared"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "turbo": "^2.5.6",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.13",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "i18next": "^25.5.3",
    "react-i18next": "^16.0.0"
  }
}
