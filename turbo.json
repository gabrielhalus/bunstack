{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false,
      "persistent": true
    },
    "drizzle:generate": {
      "cache": false,
      "dependsOn": ["^drizzle:generate"]
    },
    "drizzle:push": {
      "cache": false,
      "dependsOn": ["^drizzle:push"]
    },
    "drizzle:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
